[Unit]
Description=Redis-sentinel
After=network.target

[Service]
Type=notify
NotifyAccess=all
User=redis
Group=redis
ExecStart=/usr/bin/redis-sentinel /etc/redis/redis-sentinel.conf
Restart=always
ExecStartPre=/bin/mkdir -p /var/lib/redis-sentinel
ExecStartPre=/bin/chown redis:redis /var/lib/redis-sentinel


[Install]
WantedBy=multi-user.target